#app
	.front
		h3 Random Password Generator
		form.slider
			label.headie Set the Password limit
			input#myRange.slider(
				type="range",
				min="4",
				max="20",
				value="5",
				name="passR",
				oninput="this.form.passN.value=this.value"
			)
			input#pLimit.slider(
				type="number",
				min="4",
				max="20",
				value="5",
				name="passN",
				oninput="this.form.passR.value=this.value"
			)
		each item in ["uppercase","lowercase","number","symbol"]
			div(class=item)
				input(id=item, type="checkbox")
				label(for=item)= item
				span.tick
		button.generate Generate Password
	.back
		.alertDone
			h3 Copied to Clipboard !!
		.output-wrap
			input#genPass(type="text") 
			button#copyPass Copy
		button.reGenerate 
			i.fas.fa-arrow-left
			h5 Generate New Password

